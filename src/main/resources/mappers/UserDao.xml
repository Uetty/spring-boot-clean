<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uetty.sample.springboot.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.uetty.sample.springboot.entity.User">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="displayName" jdbcType="VARCHAR" property="displayName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="phoneNumber" jdbcType="VARCHAR" property="phoneNumber"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="sysRole" jdbcType="INTEGER" property="sysRole"/>
        <result column="lastLoginTime" jdbcType="TIMESTAMP" property="lastLoginTime"/>
        <result column="loginFailedTimes" jdbcType="INTEGER" property="loginFailedTimes"/>
        <result column="createTime" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updateTime" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        `id`, `username`, `displayName`, `password`, `phoneNumber`, `email`, 
        `status`, `sysRole`, `lastLoginTime`, `loginFailedTimes`, `createTime`, `updateTime`
    </sql>

    <select id="getById" parameterType="java.lang.String" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		FROM `t_user`
		WHERE `id` = #{id}
    </select>

    <select id="getByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM `t_user`
        WHERE `username` = #{username}
    </select>

    <select id="getAllUser" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM `t_user`
    </select>

    <insert id="insert" parameterType="com.uetty.sample.springboot.entity.User">
        INSERT INTO `t_user`
        (`id`, `username`, `displayName`, `password`, 
        `phoneNumber`, `email`, `status`, `sysRole`, 
        `lastLoginTime`, `loginFailedTimes`, `createTime`, `updateTime`)
        VALUES (#{id}, #{username}, #{displayName}, #{password}, 
        #{phoneNumber}, #{email}, #{status}, #{sysRole}, 
        #{lastLoginTime}, #{loginFailedTimes}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.uetty.sample.springboot.entity.User">
        UPDATE `t_user`
        SET
        `username` = #{username}, 
        `displayName` = #{displayName}, 
        `password` = #{password}, 
        `phoneNumber` = #{phoneNumber}, 
        `email` = #{email}, 
        `status` = #{status}, 
        `sysRole` = #{sysRole}, 
        `lastLoginTime` = #{lastLoginTime}, 
        `loginFailedTimes` = #{loginFailedTimes}, 
        `createTime` = #{createTime}, 
        `updateTime` = #{updateTime}
        WHERE `id` = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM `t_user`
        WHERE `id` = #{id}
    </delete>

</mapper>